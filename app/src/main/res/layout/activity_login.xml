<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UserUI.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login to Book Exchange"
        android:layout_marginTop="0dp"
        android:id="@+id/etTitle"
        android:padding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etUserNameLoginActivity"
        android:hint="UserName"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/etTitle"
        android:layout_marginTop="0dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPasswordLoginActivity"
        android:layout_below="@+id/etUserNameLoginActivity"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:layout_gravity="start" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLoginLoginActivity"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_alignParentBottom="true"
        android:text="LOGIN"/>

</RelativeLayout>
